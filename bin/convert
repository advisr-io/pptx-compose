#!/usr/bin/env node

"use strict";

const program = require("commander");
const pkg = require("../package");
const Composer = require("../dist/index.js").default;

program
  .usage("[options] <input> <output>")
  .version(pkg.version)
  .option("-i, --input", "PPTX File")
  .option("-o, --output", "Output JSON file (optional)")
  .parse(process.argv);

if (!program.args || !program.args[0]) {
  program.help();
}

const input = program.args[0];
const output = program.args[1];

const composer = new Composer();

composer
  .toJSON(input, { output: output })
  .then((output) => {
    console.log("Results saved at:", output);
    process.exit();
  })
  .catch((err) => {
    console.error(err);
    process.exit();
  });
